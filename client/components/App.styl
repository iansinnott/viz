@require '../lib/vars.styl'

*
  box-sizing border-box

body
  background react-blue
  font-family helvetica
  color black
  font-size 20px

h1
  margin 20px 0

h3
  margin-top 0

pre
  font-family mono
  line-height 1.5
  border-radius 3px
  border 1px solid border-gray

section
  padding spaceline
  background white

p
  line-height 1.5
  img
    margin 0 6px

.heading
  composes heading from '../lib/global.styl'

.App
  background black
  min-width 320px

.nav
  background darken(black, 10%)
  padding-left 20px

  a
    display inline-block
    padding 20px
    text-transform uppercase
    text-decoration none
    color darken(white, 20%)
    &:hover
      color white

  .active
    background black

.hl
  font-weight bold
  color react-blue

.siteTitle
  display flex
  align-items center

  +below(420px)
    display block

  img
    display inline-block
    width 80px
    height 80px
    margin-right 20px

    +below(420px)
      display block
      margin 0 auto
