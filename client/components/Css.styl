@require '../lib/vars.styl'

.heading
  composes heading from '../lib/global.styl'

.Css
  background white

.showHide
  position relative
  display inline-block

  img
    uninteractive()

  img
  &:after
    border-radius 3px

  &:not(:last-child)
    margin-right spaceline

  &:after
    content 'Reveal'
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background orange
    text-align center
    padding-top 30%
    transition all 0.5s ease-out
    opacity 1

  &.rotateHidden
    &:after
      opacity 0
      transform rotate(20deg)

  &.scaleHidden
    &:after
      opacity 0
      transform scale(1.3)

@keyframes spinhouse
  from
    transform rotate(0deg)
  50%
    transform rotate(180deg)
    left 400px
    right -400px
    border-radius 50%
  // It seems we don't need a to or 100% as long as the values are the same as
  // from

@keyframes spinhouse2
  from
    transform rotate(0deg)
  to
    transform rotate(180deg)
    left 400px
    right -400px
    border-radius 50%


.keyframe
  position relative
  display inline-block

  &:after
    content 'Toggle'
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background orange
    text-align center
    padding-top 30%

  &.keyspin
    &:after
      animation-name spinhouse
      animation-duration 3s
      animation-iteration-count infinite


// An alternate method of getting a smooth animation that doesn't jerk back to
// starting piont. simply use the alternate direction
.keyframe2
  &.keyspin
    &:after
      animation-name spinhouse2
      animation-duration 1.5s
      animation-direction alternate

// Timer
@keyframes rota
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)


@keyframes fill
  from
    opacity 0
  50%, to
    opacity 1

@keyframes mask
  from
    opacity 1
  50%, to
    opacity 0

.timer
  position relative
  background blue
  width 200px
  height 200px

pie()
  width 50%
  height 100%
  position absolute
  background green
  border 10px solid pink

.filler
  pie()
  left 50%
  border-radius 0 100px 100px 0
  border-left none
  animation fill 10s steps(1, end) infinite

.spinner
  pie()
  border-radius 100px 0 0 100px
  border-right none
  animation rota 10s linear infinite

.mask
  position relative
  width 50%
  height 100%
  background inherit
  z-index 3
  animation mask 10s steps(1, end) infinite
