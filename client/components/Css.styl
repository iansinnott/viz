@require '../lib/vars.styl'

.heading
  composes heading from '../lib/global.styl'

.Css
  background white

.showHide
  position relative
  display inline-block

  img
    uninteractive()

  img
  &:after
    border-radius 3px

  &:not(:last-child)
    margin-right spaceline

  &:after
    content 'Reveal'
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background orange
    text-align center
    padding-top 30%
    transition all 0.5s ease-out
    opacity 1

  &.rotateHidden
    &:after
      opacity 0
      transform rotate(20deg)

  &.scaleHidden
    &:after
      opacity 0
      transform scale(1.3)

@keyframes spinhouse
  from
    transform rotate(0deg)
  50%
    transform rotate(180deg)
    left 400px
    right -400px
    border-radius 50%
  // It seems we don't need a to or 100% as long as the values are the same as
  // from

@keyframes spinhouse2
  from
    transform rotate(0deg)
  to
    transform rotate(180deg)
    left 400px
    right -400px
    border-radius 50%


.keyframe
  position relative
  display block

  &:after
    content 'Toggle'
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background orange
    text-align center
    padding-top 30%

  &.keyspin
    &:after
      animation-name spinhouse
      animation-duration 3s
      animation-iteration-count infinite

